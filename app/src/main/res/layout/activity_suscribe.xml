<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C1_with"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context="com.citaurus.gmspps.SuscribeActivity">

    <LinearLayout
        android:id="@+id/Webfield"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:focusable="true"
        />
    </LinearLayout>
     <LinearLayout
         android:id="@+id/Subfield"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/suscribe_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/title_activity_suscribe"
                android:textColor="@android:color/white"
                android:theme="@style/ThemeOverlay.MyDarkButton"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/Listfield"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">
    <ListView android:id="@+id/listView1" android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Passfield"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="gone">

        <EditText android:id="@+id/password"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:imeActionLabel="test"
            android:hint="password"
            android:background="@color/C1_with"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"



            android:maxLines="1" android:singleLine="true"
            android:allowUndo="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp" />



        <Button
            android:id="@+id/ok_suscribe_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Ok"
            android:textColor="@android:color/white"
            android:theme="@style/ThemeOverlay.MyDarkButton"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>
</LinearLayout>






